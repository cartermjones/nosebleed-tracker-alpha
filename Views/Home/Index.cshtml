@{
    ViewData["Title"] = "Home Page";
}

<script>
    function Click(id) {
        if (confirm('Are you sure you want to delete this entry?')) {
            $.ajax({
                url: ('@Url.Action("DeleteBleed", "Home")'),
                type: 'POST',
                data: { BleedId: id }
            }).done(function () {
                document.getElementById('tr_' + id).style.display = "none";
            });
        }
    }
</script>

<div class="jumbotron">
    <h1>TOBIAS Nosebleed Tracker Alpha</h1>
    <p>Tracking Only Bleeds In A System - the TOBIAS promise, the TOBIAS way.<p>
</div>

<h2>Bleed Events</h2>

<div>
    <!-- List of Bleeds -->
    
    <table class="table text-center">
        <tr class="card-header">
            <th>Bleed Severity</th>
            <th>Comments</th>
            <th>Date</th>
            <th>Remove Entry</th>
        </tr>

        @if  (Model != null)
        {
            var added = false;
            foreach(var bleed in Model)
            {
                <tr id="tr_@bleed.BleedId">
                    <td>@bleed.Severity</td>
                    <td>@bleed.Comment</td>
                    <td>@bleed.BleedDate</td>
                    <td><button class="btn" onclick="Click(@bleed.BleedId)">Delete Entry</button></td>
                </tr>
                added = true;
            }

            if(!added)
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td style="display:none;"></td>
                    <td>No bleeds found.</td>
                </tr>
            }
        }
    </table>
    
    <h2 >Log a New Bleed</h2>
    
    <form asp-controller="Home" asp-action="LogBleed" method="post">
       
        <div class="form-group">
            <label for="bleedSeverity">Bleed Severity</label>
            <input type="number" id="bleedSeverity" name="Severity" placeholder="1" />
            <small class="form-text text-muted">Enter the severity of the bleed on a scale of 1-10.</small>
        </div>
        
        <div class="form-group">
            <label for="comments">Comments</label>
            <input type="text" id="comments" name="Comment" placeholder=" " />
            <small class="form-text text-muted">Please describe the episode.</small>
        </div>
       
        <div class="form-group">
            <label for="bleedDateTime">Bleed Date and Time</label>
            <input type="datetime-local" id="bleedDateTime" name="BleedDateTime" />
        </div>
        
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
